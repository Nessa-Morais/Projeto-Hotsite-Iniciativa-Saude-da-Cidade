@model agendasDeEventos


@{
    
    Layout = "_Layout";
}


<form asp-action="cadastrarEvento" method="post" >
    
    <div class="row">
    <div class="col-sm-4 col-lg-4"></div>    
        <div class="col-sm-12 col-md-4 col-lg-4">
                <div class="form-group">
                    <label asp-for="dataEvento"> Data do evento</label>
                    <input type="date" asp-for="dataEvento" class="form-control"/>
                </div>
        </div>
    
    </div>
    <div class="col-sm-4 col-lg-4"></div>
    </div>

    <div class="row">
    <div class="col-sm-4 col-lg-4"></div>    
        <div class="col-sm-12 col-md-4 col-lg-4">
                <div class="form-group">
                    <label asp-for="evento"> Nome do evento</label>
                    <input  type="text" asp-for="evento" class="form-control"/>
                </div>
        </div>

         <input type="submit" value="cadastrar" class="btn btn-primary"/>
    
    </div>
    <div class="col-sm-4 col-lg-4"></div>
    </div>

</form>